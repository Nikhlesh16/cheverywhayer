# ========================================
# FRONTEND ENVIRONMENT VARIABLES
# ========================================
# ⚠️ ALL frontend variables MUST start with NEXT_PUBLIC_ to be accessible in the browser
# These are embedded at BUILD time, not runtime

# ========================================
# REQUIRED VARIABLES
# ========================================

# Backend API URL - Where the NestJS backend is hosted
# Local: http://localhost:3001
# Vercel with Railway: https://your-app-name.up.railway.app
# Vercel with Render: https://your-app-name.onrender.com
# Fly.io: https://your-backend.fly.dev
NEXT_PUBLIC_API_URL=http://localhost:3001

# ========================================
# OPTIONAL VARIABLES
# ========================================

# WebSocket URL - If different from API_URL (usually the same)
# If omitted, falls back to NEXT_PUBLIC_API_URL
# NEXT_PUBLIC_WS_URL=http://localhost:3001

# Node environment
# Values: development, production, test
NODE_ENV=development

# ========================================
# FEATURE FLAGS (Optional)
# ========================================
# Control feature availability per environment

# Enable direct messaging
# NEXT_PUBLIC_ENABLE_DM=true

# Enable image uploads
# NEXT_PUBLIC_ENABLE_IMAGE_UPLOAD=true

# Enable location search
# NEXT_PUBLIC_ENABLE_LOCATION_SEARCH=true

# ========================================
# MAP CONFIGURATION (Optional)
# ========================================

# Custom map tile provider
# Default: OpenStreetMap (free, no API key needed)
# NEXT_PUBLIC_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Mapbox (requires API token)
# NEXT_PUBLIC_MAP_TILE_URL=https://api.mapbox.com/styles/v1/mapbox/streets-v11/tiles/{z}/{x}/{y}?access_token={accessToken}
# NEXT_PUBLIC_MAPBOX_TOKEN=pk.xxxxx

# ========================================
# GEOCODING API (Optional)
# ========================================

# Geocoding service for location search
# Default: Nominatim (free, no API key, but rate limited)
# NEXT_PUBLIC_GEOCODING_URL=https://nominatim.openstreetmap.org

# Mapbox Geocoding (requires token)
# NEXT_PUBLIC_GEOCODING_URL=https://api.mapbox.com/geocoding/v5/mapbox.places
# NEXT_PUBLIC_MAPBOX_TOKEN=pk.xxxxx

# Google Geocoding (requires API key)
# NEXT_PUBLIC_GEOCODING_URL=https://maps.googleapis.com/maps/api/geocode/json
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaSyxxxxx

# ========================================
# ANALYTICS (Optional)
# ========================================

# Google Analytics 4
# Get from: https://analytics.google.com/
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# PostHog (open source analytics)
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ========================================
# BRANDING (Optional)
# ========================================

# Application name
# NEXT_PUBLIC_APP_NAME=Cheverywhayer

# Application description
# NEXT_PUBLIC_APP_DESCRIPTION=Hyperlocal Social Network

# Logo URL
# NEXT_PUBLIC_LOGO_URL=/logo.png

# ========================================
# MONITORING (Optional)
# ========================================

# Sentry for error tracking
# Get from: https://sentry.io/
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# ========================================
# PLATFORM-SPECIFIC NOTES
# ========================================

# VERCEL:
# - Add variables in: Settings > Environment Variables
# - Set for: Production, Preview, Development
# - Preview deployments get unique URLs automatically
# - NEXT_PUBLIC_ vars are available in browser

# NETLIFY:
# - Add in: Site settings > Build & deploy > Environment
# - Prefix all with NEXT_PUBLIC_

# RAILWAY:
# - Add in: Variables tab for frontend service
# - Build-time variables are baked into the build

# FLY.IO:
# - Set in fly.toml [build.args] section
# - Or use fly secrets set for runtime

# ========================================
# SECURITY NOTES
# ========================================
# ⚠️ NEVER put secrets in NEXT_PUBLIC_ variables!
# ⚠️ These are visible in browser/JavaScript bundle
# ⚠️ Only use for non-sensitive configuration
# ⚠️ API keys, secrets go in BACKEND .env only
